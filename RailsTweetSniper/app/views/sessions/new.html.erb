
<h1>Sign in</h1>


<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email, :id => "sign-in-email" %>
    <br />
    <%= f.text_field :email, :title => "Enter email that you signed up with" %>
  </div>

  <div class="field">
    <%= f.label :password, :id => "sign-in-password" %>
    <br />
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit "Sign in", :id => "sign-in-submit-button" %>
  </div>
<% end %>


<br />
<br />


<p>New user? <%= link_to "Sign up now!", signup_path, :title => "Totally painless!" %></p>


